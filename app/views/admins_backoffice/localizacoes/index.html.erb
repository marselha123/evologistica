<h3>Localizações</h3>

<div class="card-body" style="background-color: White">


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr bgcolor="black">
        <th>Classificação</th>
        <th>Linha</th>
        <th>Armazem</th>
        <th>Rua</th>
        <th>Prédio</th>
        <th>Andar</th>
        <th>SLOT</th>
        <th>Endereço</th>
        <th>Acesso</th>
        <th>Volume</th>
        <th>Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @localizacoes.each do |localizacao| %>
        <tr>
          <td><%= localizacao.classificacao %></td>
          <td><%= localizacao.linha %></td>
          <td><%= localizacao.armazem %></td>
          <td><%= localizacao.rua %></td>
          <td><%= localizacao.predio %></td>
          <td><%= localizacao.andar %></td>
          <td><%= localizacao.slot %></td>
          <td><%= localizacao.endereco %></td>
          <td><%= localizacao.acesso %></td>
          <td><%= localizacao.volume %></td>
          <td>
            <a href="show/<%= localizacao.id %>"><i title="Visualizar" class="fas fa-eye"></i></a>
            <a href="show/<%= localizacao.id %>"><i title="Incluir" class="fas fa-plus-circle"></i></a>
            <a href="show/<%= localizacao.id %>"><i title= "Excluir" class="fas fa-minus-circle"></i></a>
          </td>
        
        </tr>
    
      <% end %>
    </tbody>
  </table>

  <%= paginate @localizacoes %>
</div>
</div>