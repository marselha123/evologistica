<h3>Detalhes</h3>
<div class="card-body" style="background-color: White">
  <form role="form">
    <fieldset disabled="">
      <div class="row">
        <div class="col-sm-1">
          <label for="disabledSelect">Cód. OP</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_codigo %>-<%= @producao.opr_subcodigo %>' disabled="">
        </div>  
        <div class="col-sm-1">
          <label for="disabledSelect">Situação</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_situacao %>' disabled="">
        </div>  
        <div class="col-sm-2">
          <label for="disabledSelect">Pedido Evo/Pieta</label>
          <input class="form-control" type="text" placeholder='<%= @producao.prp_codigo %>' disabled="">
        </div>  
        <div class="col-sm-2">
          <label for="disabledSelect">Número Série</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_numeroserie %>' disabled="">
        </div>  
      </div>  
      <div class="row">
        <div class="col-sm-4">
          <label for="disabledSelect">Nome integrador/cliente</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_descricao %>' disabled="">
        </div>  
        <div class="col-sm-2">
          <label for="disabledSelect">Tipo Frete</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_tipofrete %>' disabled="">
        </div>  
      </div>  
      <div class="row">
        <div class="col-sm-3">
          <label for="disabledSelect">Cidade Entrega</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_cidade %>' disabled="">
        </div>  
        <div class="col-sm-1">
          <label for="disabledSelect">Est. Entrega</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_estado %>' disabled="">
        </div>  
        <div class="col-sm-2">
          <label for="disabledSelect">Data Liberação</label>
          <input class="form-control" type="text" placeholder='<%= @producao.opr_liberadoem %>' disabled="">
        </div>  
      </div>
      <p>
    </fieldset>
    <div class="panel-body">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr bgcolor="black">
            <th>Item</th>
            <th>Referência</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Separado</th>
          </tr>
        </thead>
        <tbody>
          <% @producao.producaoitems.each do |pitems| %>
            <tr>
              <td><%= pitems.opi_item %></td>
              <td><%= pitems.opi_referencia %></td>
              <td><%= pitems.opi_descricao %></td>
              <td><%= pitems.opi_quantidade %></td>
              <td><%= pitems.opi_qtdeseparado %></td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- Divider -->
    <div class="row">
      <div class="col-sm-1">
        <%= link_to admins_backoffice_welcome_index_path, class:"btn btn-primary btn-circle" do %>
          <i class="fa fa-arrow-left"></i>
        <% end %>
      </div>  
    </div>  
  </form>
</div> 